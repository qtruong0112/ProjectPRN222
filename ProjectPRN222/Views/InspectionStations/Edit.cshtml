@model ProjectPRN222.Models.InspectionStation

@{
    ViewData["Title"] = "Chỉnh sửa trạm đăng kiểm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow rounded-5 border-0">
                <div class="card-header bg-info text-white rounded-top-5 border-0">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Chỉnh sửa trạm đăng kiểm</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="rounded-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="StationId" />
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control rounded-5" placeholder="Nhập tên trạm" />
                            <span asp-validation-for="Name" class="text-danger rounded-3 d-inline-block px-2"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-semibold"></label>
                            <input asp-for="Address" class="form-control rounded-5" placeholder="Nhập địa chỉ" />
                            <span asp-validation-for="Address" class="text-danger rounded-3 d-inline-block px-2"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold"></label>
                            <input asp-for="Phone" class="form-control rounded-5" placeholder="Nhập số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger rounded-3 d-inline-block px-2"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control rounded-5" placeholder="Nhập email" />
                            <span asp-validation-for="Email" class="text-danger rounded-3 d-inline-block px-2"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info btn-lg rounded-5 fw-bold shadow-sm text-white">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="text-center mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold shadow-sm back-btn">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .back-btn:hover {
        background: #e9ecef;
        color: #495057 !important;
        border-color: #adb5bd;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
