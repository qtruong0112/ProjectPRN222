@model ProjectPRN222.Models.InspectionAppointment

@{
    ViewData["Title"] = "Chi tiết lịch hẹn đăng kiểm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow rounded-5 border-0">
                <div class="card-header bg-info text-white rounded-top-5 border-0">
                    <h4 class="mb-0"><i class="bi bi-info-circle"></i> Chi tiết lịch hẹn đăng kiểm</h4>
                </div>
                <div class="card-body p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-calendar-date"></i> @Html.DisplayNameFor(model => model.AppointmentDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.AppointmentDate)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-info-circle"></i> @Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-card-text"></i> @Html.DisplayNameFor(model => model.Note)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Note)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-building"></i> @Html.DisplayNameFor(model => model.Station)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Station.Name)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.User)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.User.FullName)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-car-front"></i> @Html.DisplayNameFor(model => model.Vehicle)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Vehicle.PlateNumber)</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white rounded-bottom-5 border-0 text-center">
                    <a asp-action="Edit" asp-route-id="@Model?.AppointmentId" class="btn btn-info rounded-pill fw-semibold me-2 text-white">
                        <i class="bi bi-pencil-square"></i> Chỉnh sửa
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill fw-semibold back-btn">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .back-btn:hover {
        background: #e9ecef;
        color: #495057 !important;
        border-color: #adb5bd;
    }
</style>
