@model IEnumerable<ProjectPRN222.Models.InspectionResultStatsViewModel>

@{
    ViewData["Title"] = $"Thống kê trạm: {ViewBag.StationName}";
}

<h2 class="text-info">@ViewData["Title"]</h2>

<table class="table table-bordered table-hover text-center">
    <thead class="table-info">
        <tr>
            <th>Kết quả</th>
            <th>Số lượng xe</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Result</td>
                <td>@item.TotalVehicles</td>
            </tr>
        }
    </tbody>
</table>


<div class="text-center mt-4">
    <a asp-action="Index" asp-controller="InspectionStations"  class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold shadow-sm back-btn">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách
    </a>
</div>
