@model IEnumerable<ProjectPRN222.Models.User>

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .custom-rounded-table {
        border-radius: 1rem !important;
        overflow: hidden;
    }
    .custom-rounded-table thead tr:first-child th:first-child {
        border-top-left-radius: 1rem;
    }
    .custom-rounded-table thead tr:first-child th:last-child {
        border-top-right-radius: 1rem;
    }
    .table-hover tbody tr:hover {
        background-color: #e3f2fd;
    }
</style>

<div class="container py-4">
    <h2 class="mb-4 text-center text-info fw-bold">
        <i class="bi bi-people"></i> Danh sách người dùng
    </h2>
    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-info fw-bold text-white">
            <i class="bi bi-person-plus me-1"></i> Thêm người dùng
        </a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle text-center custom-rounded-table">
            <thead class="bg-info text-white">
                <tr>
                    <th><i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.FullName)</th>
                    <th><i class="bi bi-envelope"></i> @Html.DisplayNameFor(model => model.Email)</th>
                    <th><i class="bi bi-key"></i> @Html.DisplayNameFor(model => model.Password)</th>
                    <th><i class="bi bi-telephone"></i> @Html.DisplayNameFor(model => model.Phone)</th>
                    <th><i class="bi bi-geo"></i> @Html.DisplayNameFor(model => model.Address)</th>
                    <th><i class="bi bi-person-badge"></i> @Html.DisplayNameFor(model => model.Role)</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                        <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Role.RoleName)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-warning text-white me-1">
                                <i class="bi bi-info-circle"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Bootstrap Icons CDN (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
