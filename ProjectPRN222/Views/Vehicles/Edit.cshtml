@model ProjectPRN222.Models.Vehicle

@{
    ViewData["Title"] = "Chỉnh sửa xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow rounded-5 border-0">
                <div class="card-header bg-info text-white rounded-top-5 border-0 text-center">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Chỉnh sửa xe</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="rounded-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="VehicleId" />
                        <div class="mb-3">
                            <label asp-for="OwnerId" class="form-label fw-semibold"></label>
                            <select asp-for="OwnerId" class="form-control rounded-3" asp-items="ViewBag.OwnerId"></select>
                            <span asp-validation-for="OwnerId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PlateNumber" class="form-label fw-semibold"></label>
                            <input asp-for="PlateNumber" class="form-control rounded-3" />
                            <span asp-validation-for="PlateNumber" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Brand" class="form-label fw-semibold"></label>
                            <input asp-for="Brand" class="form-control rounded-3" />
                            <span asp-validation-for="Brand" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Model" class="form-label fw-semibold"></label>
                            <input asp-for="Model" class="form-control rounded-3" />
                            <span asp-validation-for="Model" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ManufactureYear" class="form-label fw-semibold"></label>
                            <input asp-for="ManufactureYear" class="form-control rounded-3" />
                            <span asp-validation-for="ManufactureYear" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="EngineNumber" class="form-label fw-semibold"></label>
                            <input asp-for="EngineNumber" class="form-control rounded-3" />
                            <span asp-validation-for="EngineNumber" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mb-2">
                            <button type="submit" class="btn btn-info text-white fw-bold rounded-3">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold shadow-sm back-btn">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap Icons CDN (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
