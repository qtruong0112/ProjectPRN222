@model ProjectPRN222.Models.Vehicle

@{
    ViewData["Title"] = "Xóa xe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow rounded-5 border-0">
                <div class="card-header bg-danger text-white rounded-top-5 border-0">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Xác nhận xóa xe</h4>
                </div>
                <div class="card-body p-4">
                    <h5 class="text-danger mb-4"><i class="bi bi-question-circle"></i> Bạn có chắc chắn muốn xóa xe này?</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-123"></i> @Html.DisplayNameFor(model => model.PlateNumber)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PlateNumber)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-award"></i> @Html.DisplayNameFor(model => model.Brand)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Brand)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-gear"></i> @Html.DisplayNameFor(model => model.Model)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Model)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-calendar"></i> @Html.DisplayNameFor(model => model.ManufactureYear)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ManufactureYear)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-cpu"></i> @Html.DisplayNameFor(model => model.EngineNumber)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.EngineNumber)</dd>
                        <dt class="col-sm-4 text-end fw-semibold"><i class="bi bi-person"></i> @Html.DisplayNameFor(model => model.Owner)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Owner.UserId)</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white rounded-bottom-5 border-0 text-center">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="VehicleId" />
                        <button type="submit" class="btn btn-danger rounded-pill fw-semibold me-2 shadow-sm">
                            <i class="bi bi-trash"></i> Xóa
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill fw-semibold back-btn">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .back-btn:hover {
        background: #e9ecef;
        color: #495057 !important;
        border-color: #adb5bd;
    }
</style>
