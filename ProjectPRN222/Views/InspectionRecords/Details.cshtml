@model ProjectPRN222.Models.InspectionRecord

@{
    ViewData["Title"] = "Inspection Record Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4 d-flex align-items-center">
                    <i class="bi bi-clipboard2-data me-2"></i>
                    <span class="fs-5 fw-semibold">Inspection Record Details</span>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-calendar-event me-1"></i> @Html.DisplayNameFor(model => model.InspectionDate)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.InspectionDate)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-award me-1"></i> @Html.DisplayNameFor(model => model.Result)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Result)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-cloud me-1"></i> @Html.DisplayNameFor(model => model.Co2emission)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Co2emission)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-cloud me-1"></i> @Html.DisplayNameFor(model => model.Hcemission)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Hcemission)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-chat-left-text me-1"></i> @Html.DisplayNameFor(model => model.Comments)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Comments)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-person-badge me-1"></i> @Html.DisplayNameFor(model => model.Inspector)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Inspector.FullName)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-geo-alt me-1"></i> @Html.DisplayNameFor(model => model.Station)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Station.Name)
                        </dd>
                        <dt class="col-sm-4 text-secondary">
                            <i class="bi bi-car-front me-1"></i> @Html.DisplayNameFor(model => model.Vehicle)
                        </dt>
                        <dd class="col-sm-8">
                            @(Model.Vehicle?.PlateNumber + " - " + Model.Vehicle?.Owner?.FullName)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-transparent d-flex justify-content-end gap-2 rounded-bottom-4">
                    <a asp-action="Edit" asp-route-id="@Model?.RecordId" class="btn btn-outline-primary rounded-pill px-4">
                        <i class="bi bi-pencil-square me-1"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN (if not already included in _Layout) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
