@model ProjectPRN222.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<h2>Reset Password</h2>

<form asp-action="ResetPassword" method="post">
    @* Sửa lỗi: value="@Model.Token" thay vì value="@Model" *@
    <input type="hidden" name="token" value="@Model.Token" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label for="newPassword">New Password:</label>
        <input type="password" name="newPassword" asp-for="NewPassword" required />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>

    <div>
        <label for="confirmPassword">Confirm Password:</label>
        <input type="password" name="confirmPassword" asp-for="ConfirmPassword" required />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>

    <button type="submit">Reset Password</button>
</form>