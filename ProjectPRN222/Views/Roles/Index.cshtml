@model IEnumerable<ProjectPRN222.Models.Role>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4 d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-people-fill me-2"></i>
                        <span class="fs-5 fw-semibold">Roles</span>
                    </div>
                    <a asp-action="Create" class="btn btn-success rounded-pill px-4">
                        <i class="bi bi-plus-circle me-1"></i> Create New
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.FirstOrDefault().RoleName)</th>
                                    <th class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.RoleName)</td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-warning btn-sm rounded-pill me-1">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-info btn-sm rounded-pill me-1 text-white">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger btn-sm rounded-pill">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons CDN (if not already included in _Layout) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
