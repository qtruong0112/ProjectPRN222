@model ProjectPRN222.Models.User

@{
    ViewData["Title"] = "Chỉnh sửa thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow rounded-5 border-0">
                <div class="card-header bg-info text-white rounded-top-5 border-0 text-center">
                    <h3 class="mb-0"><i class="bi bi-person-circle"></i> Chỉnh sửa thông tin cá nhân</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="rounded-5">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Password" />
                        <input type="hidden" asp-for="RoleId" />
                        
                        <div class="mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold"></label>
                            <input asp-for="FullName" class="form-control rounded-3" placeholder="Họ và tên" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold"></label>
                            <input asp-for="Email" class="form-control rounded-3" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label fw-semibold"></label>
                            <input asp-for="Phone" class="form-control rounded-3" placeholder="Số điện thoại" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        @if (Model.RoleId == 2 && Model.StationId.HasValue)
                        {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Trạm đăng kiểm</label>
                            <input type="text" class="form-control rounded-3" 
                                   value="@ViewBag.StationName" readonly 
                                   style="background-color: #f8f9fa; cursor: not-allowed;" />
                            <input type="hidden" asp-for="StationId" />
                        </div>
                        }
                        @if (Model.RoleId == 3 && Model.StationId.HasValue)
                        {
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Trạm đăng kiểm</label>
                            <input type="text" class="form-control rounded-3" 
                                   value="@ViewBag.StationName" readonly 
                                   style="background-color: #f8f9fa; cursor: not-allowed;" />
                            <input type="hidden" asp-for="StationId" />
                        </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Address" class="form-label fw-semibold"></label>
                            <textarea asp-for="Address" class="form-control rounded-3" placeholder="Địa chỉ" rows="3"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2 mb-2">
                            <button type="submit" class="btn btn-info text-white fw-bold rounded-3">
                                <i class="bi bi-save" ></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <a asp-action="Index" asp-controller="Home" class="btn btn-outline-secondary rounded-pill px-4 py-2 fw-semibold shadow-sm back-btn">
                            <i class="bi bi-arrow-left"></i> Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap Icons CDN (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
