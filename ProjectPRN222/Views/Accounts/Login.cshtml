@{
    ViewBag.Title = "Login";
}
<h2>Login</h2>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

@using (Html.BeginForm())
{
    <label>Email:</label>
    <input type="text" name="email" />
    <br />

    <label>Password:</label>
    <input type="password" name="password" />
    <br />

    <input type="submit" value="Login" />
}
