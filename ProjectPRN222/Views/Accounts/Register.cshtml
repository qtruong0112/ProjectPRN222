@model ProjectPRN222.Models.User
@{
    ViewBag.Title = "Register";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow rounded-4 border-0">
                <div class="card-header bg-info text-white rounded-top-4 border-0 text-center">
                    <h3 class="mb-0"><i class="bi bi-person-plus"></i> Đăng ký tài khoản</h3>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm())
                    {
                        <div class="mb-3">
                            @Html.LabelFor(m => m.FullName, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control rounded-3", placeholder = "Họ và tên" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control rounded-3", placeholder = "Email" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label fw-semibold" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control rounded-3", placeholder = "Mật khẩu" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Phone, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control rounded-3", placeholder = "Số điện thoại" })
                        </div>
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Address, new { @class = "form-label fw-semibold" })
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control rounded-3", placeholder = "Địa chỉ" })
                        </div>
                        <div class="d-grid gap-2 mb-2">
                            <input type="submit" value="Đăng ký" class="btn btn-info text-white fw-bold rounded-3" />
                        </div>
                    }
                    <div class="text-center mt-3">
                        <span>Đã có tài khoản?</span>
                        <a href="@Url.Action("Login", "Accounts")" class="fw-bold text-info ms-1">Đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap Icons CDN (nếu chưa có) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
