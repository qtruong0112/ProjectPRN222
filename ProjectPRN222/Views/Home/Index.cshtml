@{
    ViewData["Title"] = "Trang chủ";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow rounded-5 border-0">
                <div class="card-header bg-info text-white rounded-top-5 border-0 text-center">
                    <h2 class="mb-0"><i class="bi bi-car-front-fill"></i> Hệ thống Quản lý Đăng kiểm Phương tiện</h2>
                </div>
                <div class="card-body p-5 text-center">
                    <h1 class="display-4 mb-3">Chào mừng bạn đến với ProjectPRN222!</h1>
                    <p class="lead mb-4">Hệ thống hỗ trợ đặt lịch, quản lý đăng kiểm, tra cứu phương tiện và quản lý người dùng một cách hiện đại, tiện lợi và thân thiện.</p>

                    @* Hiển thị thông tin user nếu đã đăng nhập *@
                    @if (ViewBag.IsLoggedIn == true)
                    {
                        <div class="mb-3">
                            <h4 class="text-info">Xin chào, @ViewBag.UserName!</h4>
                        </div>
                    }

                    @* Kiểm tra RoleId từ Session *@
                    @if (ViewBag.RoleId != null && ViewBag.RoleId == 1)
                    {
                        @* Customer Role - Hiển thị buttons đặt lịch và tra cứu *@
                        <a href="@Url.Action("Create", "InspectionAppointments")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-calendar-check"></i> Đặt lịch đăng kiểm ngay
                        </a>
                        <a href="@Url.Action("ForOwnerVehicle", "InspectionRecords")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-search"></i> Tra cứu kết quả đăng kiểm
                        </a>
                        <a href="@Url.Action("Index", "Vehicles")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-list-check"></i> Quản lý Xe
                        </a>
                        
                    }
                    else if (ViewBag.RoleId != null && ViewBag.RoleId == 2)
                    {
                        @* Admin/Staff Role - Buttons quản lý *@
                        <a href="@Url.Action("Index", "InspectionAppointments")" class="btn btn-success btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-list-check"></i> Quản lý lịch đăng kiểm
                        </a>
        
                        <a href="@Url.Action("Index", "InspectionRecords")" class="btn btn-primary btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-clipboard-data"></i> Quản lý kết quả đăng kiểm
                        </a>
                        
                    }
                    else if (ViewBag.RoleId != null && ViewBag.RoleId == 4)
                    {
                        <a href="@Url.Action("ForPolice", "InspectionRecords")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-search"></i> Tra cứu phương tiện vi phạm
                        </a>
                    }
                    else if (ViewBag.RoleId != null && ViewBag.RoleId == 3)
                    {
                        <a href="@Url.Action("Index", "InspectionStations")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-search"></i> Quản lý cơ sở đăng kiểm
                        </a>
                    }
                    else if (ViewBag.RoleId != null && ViewBag.RoleId == 5)
                    {
                        <a href="@Url.Action("Index", "InspectionStations")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-search"></i> Quản lý cơ sở đăng kiểm
                        </a>
                        <a href="@Url.Action("ForPolice", "InspectionRecords")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-search"></i> Tra cứu phương tiện vi phạm
                        </a>
                        <a href="@Url.Action("Index", "InspectionAppointments")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-list-check"></i> Quản lý lịch đăng kiểm
                        </a>
                        <a href="@Url.Action("Create", "InspectionAppointments")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-calendar-check"></i> Đặt lịch đăng kiểm ngay
                        </a>
                        <a href="@Url.Action("ForOwnerVehicle", "InspectionRecords")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-search"></i> Tra cứu kết quả đăng kiểm
                        </a>
                        <a href="@Url.Action("Index", "Vehicles")" class="btn btn-info btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-list-check"></i> Quản lý Xe
                        </a>
                    }
                    else
                    {
                        @* Hiển thị khi chưa đăng nhập *@
                        <a href="@Url.Action("Login", "Accounts")" class="btn btn-primary btn-lg rounded-pill fw-bold text-white shadow-sm me-2 mb-2">
                            <i class="bi bi-box-arrow-in-right"></i> Đăng nhập
                        </a>
                        <a href="@Url.Action("Register", "Accounts")" class="btn btn-outline-primary btn-lg rounded-pill fw-bold shadow-sm me-2 mb-2">
                            <i class="bi bi-person-plus"></i> Đăng ký
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap Icons CDN (nếu chưa có) -->
